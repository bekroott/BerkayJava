package harmonikort;
import java.util.Scanner;

public class aritmetikortalama {
	public static void main(String[] args) {	
Scanner girilensayi=new Scanner(System.in);


System.out.println("ilk sayiyi girin");
		double sayi1 = girilensayi.nextInt();
System.out.println("ikinci sayiyi girin");
        double sayi2 = girilensayi.nextInt();

System.out.println("ucuncu sayiyi girin");
        double sayi3 = girilensayi.nextInt();
        
System.out.println("dorduncu sayiyi girin");
        double sayi4 = girilensayi.nextInt();


double harmonikortalama = 4 / (1/sayi1 + 1/sayi2 + 1/sayi3 + 1/sayi4);

System.out.println("girilen sayilarin harmonik ortalamasi=" +harmonikortalama);
	}

}
